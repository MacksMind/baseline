!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %title= @page_title || ::Baseline::AppName
    = stylesheet_link_tag "screen.css", :media => "screen,projection"
    = stylesheet_link_tag "print.css", :media => "print"
    /[if lt IE 8]
      = stylesheet_link_tag "ie.css", :media => "screen,projection"
    = stylesheet_link_tag "scaffold.css"
    = stylesheet_link_tag "application.css"
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"
    = javascript_include_tag :defaults
    = csrf_meta_tag
    - if Rails.env.production? && !current_user.try(:has_role?, :admin)
      / This would be a good place for Google Analytics code.
  %body
    .container
      #hd.span-24.last
        .left
          = @page_title || ::Baseline::AppName
        .right
          - if current_user
            = current_user.email
            \/
            \#{link_to "Sign out", destroy_user_session_path, :method => :delete}
          - else
            = link_to "Sign up", new_user_registration_path, :title => "Create an account"
            \/
            \#{link_to "Sign in", new_user_session_path}
      - if current_user
        #menu.span-4
          %ul.menu
            %li= link_to_unless_current "My Account", edit_user_registration_path
            - if current_user.has_role?(:admin)
              %li= link_to_unless_current 'Users', admin_users_path
      #bd{:class => "span-#{current_user ? "20" : "24"} last"}
        #flash
          - flash.each do |key, value|
            - key = :error if key == :failure
            %div{:class => key}= html_escape(value)
        .content
          = yield
      - footer_text = "&copy; 2011 Agile Reasoning LLC"
      - if current_user
        .span-4 &nbsp;
        #ft.span-20.last
          .center
            = raw footer_text
      - else
        #ft.span-24.last
          .center
            = raw footer_text
