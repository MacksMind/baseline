<h1>Sign In</h1>

<% form_for @user_session, :url => user_session_path do |f| %>
  <div>
    <%= f.error_messages %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>

    <div>
    </div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="radio">
    <%= f.submit "Sign In" %>
    <%= f.check_box :remember_me %><%= f.label :remember_me %>
  </div>
<% end %>

<%= link_to "Forgot Password?", new_account_password_reset_path %> |
<%= link_to "Resend Confirmation?", new_account_confirmation_path %>
