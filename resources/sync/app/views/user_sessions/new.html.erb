<h1>Sign In</h1>

<%= form_for @user_session, :url => user_session_path do |f| %>
  <% if @user_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this signin:</h2>

      <ul>
        <% @user_session.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>
  </div>

  <div class="actions">
    <%= f.submit "Sign In" %>
  </div>
<% end %>

<%= link_to "Forgot Password?", new_account_password_reset_path %> |
<%= link_to "Resend Confirmation?", new_account_confirmation_path %>
