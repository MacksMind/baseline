<h2>Sign In</h2>

<%= form_for :session, :url => session_path do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>
  </div>

  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<%= link_to "Forgot Password?", new_password_path %> |
<%= link_to "Resend Confirmation?", new_account_confirmation_path %>
