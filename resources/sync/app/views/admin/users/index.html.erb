<h2>Listing users</h2>

<table>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th>Roles</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.email %></td>
    <td><%=h user.name %></td>
    <td><%= h(user.roles.collect{|r| r.title}.join(",")) %></td>
    <td><%= link_to 'Show', [:admin,user] %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
    <td><%= link_to 'Destroy', [:admin,user], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

