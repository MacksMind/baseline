= form_for([:admin,@content]) do |f|
  - if @content.errors.any?
    #error_explanation
      %h2
        = pluralize(@content.errors.count, "error")
        prohibited this content from being saved:
      %ul
        - @content.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :html
    = f.text_area :html
  .actions
    = f.submit
