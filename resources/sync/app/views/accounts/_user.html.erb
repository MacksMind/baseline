<%= form_for @user, :url => account_path do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :email, "Email *" %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :first_name, "First name *" %>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name, "Last name *" %>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :time_zone %>
    <%= f.time_zone_select :time_zone, nil, :include_blank => true %>
  </div>

  <div>
    <%= f.label :password, @user.new_record? ? "Password *" : "Change Password *" %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation, "Confirmation *" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit @user.new_record? ? "Sign Up" : "Update" %>
  </div>
<% end %>

<% if !@user.new_record? %>
  <hr/>
  <%= button_to "Cancel My Account", account_path, :confirm => 'Are you sure?', :method => :delete %>
<% end %>
